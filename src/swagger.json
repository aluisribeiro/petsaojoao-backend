            "get": {
                "tags": [
                    "pet"
                ],
                "summary": "Gets a found pet by id",
                "parameters": [
                    {
                        "name": "petId",
                        "in": "path",
                        "description": "id of your pet",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "operationId": "getFoundPetId",
                "responses": {
                    "201": {
                        "description": "found"
                    },
                    "400": {
                        "description": "Pet not found"
                    }
                }
            }
        },
        "/coats/colors": {
