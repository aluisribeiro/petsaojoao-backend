    "paths": {
        "/tutors/tutorId": {
            "get": {
                "tags": [
                    "tutor"
                ],
                "summary": "Get tutor info by id",
                "operationId": "getTutors",
                "parameters": [
                    {
                        "name": "tutorId",
                        "in": "path",
                        "description": "id of your tutor",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Tutor does not exists"
                    }
                }
            }
        },
        "/tutors/tutorId/pets": {
            "post": {
                "tags": [
                    "pet"
                ],
                "summary": "Create a new pet for a specific tutor",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/TutorsPet"
                            }
                        }
                    
                  
                      }
                    }
                    
                    },
                    "responses": {
                        "200": {
                            "description": "OK"
                        },
                        "400": {
                            "description": "Tutor does not exists"
                        }
                    }
                }
            },
        
    
        "/tutors": {
            "post": {
                "tags": [
